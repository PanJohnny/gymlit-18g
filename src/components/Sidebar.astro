<style>
    :root {
        --sidebar-width: 270px;
    }

    .sidebar[data-collapsed="true"] {
        display: none;
    }

    .sidebar {
        height: 100%;
        width: var(--sidebar-width);
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        padding-left: 2em;
        overflow-x: hidden;
        padding-top: 2em;
        border-right: 1px solid var(--light);
    }

    ul {
        list-style: none;
        padding-left: 0px;
    }

    a {
        color: var(--light);
        text-decoration: none;
    }

    details > ul > li::before {
        content: "|-";
    }

    li {
        margin-left: 2em;
    }

    a:hover {
        color: var(--border);
    }

    h3:hover {
        color: var(--border);
    }

    summary {
        list-style: none;
        cursor: pointer;
    }

    details[open] > summary > h3 {
        color: var(--border);
    }

    h3 {
        margin-bottom: 0.1em;
    }

    h3::before {
        content: "# ";
    }

    .current {
        color: var(--decoration);
    }

    .lower {
        position: fixed;
        bottom: 2em;
    }

    summary::-webkit-details-marker {
        display: none; /* Chrome */
    }

    @media (max-width: 600px) {
        :root {
            --sidebar-width: 30vw;
        }
    }

    @media (max-width: 500px) {
        :root {
            --sidebar-width: 0px;
        }

        .sidebar {
            width: 100%;
        }
    }

    @media print {
        .lower {
            display: none;
        }

        .sidebar {
            border: none;
        }
    }

    .lower {
        background-color: var(--dark);
        padding: 2px;
        border: solid 1px;
        border-radius: 1px;
        border-color: var(--dark);
    }
</style>

<script>
    const sidebar = document.querySelector(".sidebar");
    window.addEventListener("resize", sizeCheck);

    function sizeCheck() {
        if (window.innerWidth <= 500) {
            sidebar.setAttribute("data-collapsed", "true");
        } else if (sidebar.getAttribute("data-collapsed") == "true") {
            sidebar.setAttribute("data-collapsed", "false");
        }
    }

    sizeCheck();

    const current = document.querySelector(
        'a[href="' + location.pathname + '"]'
    );
    if (current) current.classList.add("current");

    document.querySelector("#settingsToggle").addEventListener("click", (e) => {
        document
            .querySelector(".settings")
            .setAttribute("data-visible", "true");
    });

    document
        .querySelectorAll(".hamburger")
        .forEach((el) => el.addEventListener("click", toggleSidebar));
    if (
        current.parentElement.parentElement.parentElement.nodeName == "DETAILS"
    ) {
        current.parentElement.parentElement.parentElement.setAttribute(
            "open",
            "true"
        );
    }

    function toggleSidebar() {
        if (
            !sidebar.getAttribute("data-collapsed") ||
            sidebar.getAttribute("data-collapsed") == "false"
        ) {
            sidebar.setAttribute("data-collapsed", "true");
            document.querySelector(".main").classList.add("no-margin-left");
            document.querySelector("#h1burger").classList.remove("hidden");
        } else {
            sidebar.setAttribute("data-collapsed", "false");
            document.querySelector(".main").classList.remove("no-margin-left");
            document.querySelector("#h1burger").classList.add("hidden");
        }
    }
</script>
