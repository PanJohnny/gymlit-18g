<div class="sidebar dark" data-collapsed={false}>
    <h2><span class="toggle hamburger">☰</span> Navigace</h2>
    <nav>
        <ul>
            <li>
                <a href="/beta"><h3>Domů</h3></a>
            </li>
            <li>
                <details>
                    <summary>
                        <h3>Ročníky</h3>
                    </summary>
                    <ul>
                        <li>
                            <a href="/select/category?year=1" title="2018/2019"
                                >Prima</a>
                        </li>
                        <li>
                            <a href="/select/category?year=2" title="2019/2020"
                                >Sekunda</a>
                        </li>
                        <li>
                            <a href="/select/category?year=3" title="2020/2021"
                                >Tercie</a>
                        </li>
                        <li>
                            <a href="/select/category?year=4" title="2021/2022"
                                >Kvarta</a>
                        </li>
                        <li>
                            <a href="/select/category?year=5" title="2022/2023"
                                >Kvinta</a>
                        </li>
                        <li>
                            <a href="/select/category?year=6" title="2023/2024"
                                >Sexta</a>
                        </li>
                        <li>
                            <a href="/select/category?year=7" title="2024/2025"
                                >Septima</a>
                        </li>
                        <li>
                            <a href="/select/category?year=8" title="2025/2026"
                                >Oktáva</a>
                        </li>
                    </ul>
                </details>
            </li>
            <li>
                <a href="/beta/stats"><h3>Statistiky</h3></a>
            </li>

            <li>
                <a href="/"><h3>Stará kronika</h3></a>
            </li>
        </ul>

        <div class="lower">
            <span class="toggle" id="settingsToggle">⚙ Preference</span>
        </div>
    </nav>
</div>

<style>
    :root {
        --sidebar-width: 270px;
    }

    .sidebar[data-collapsed="true"] {
        display: none;
    }

    .sidebar {
        height: 100%;
        width: var(--sidebar-width);
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        padding-left: 2em;
        overflow-x: hidden;
        padding-top: 2em;
        border-right: 1px solid var(--light);
    }

    ul {
        list-style: none;
        padding-left: 0px;
    }

    a {
        color: var(--light);
        text-decoration: none;
    }

    details > ul > li::before {
        content: "|-";
    }

    li {
        margin-left: 2em;
    }

    a:hover {
        color: var(--border);
    }

    h3:hover {
        color: var(--border);
    }

    summary {
        list-style: none;
        cursor: pointer;
    }

    details[open] > summary > h3 {
        color: var(--border);
    }

    h3 {
        margin-bottom: 0.1em;
    }

    h3::before {
        content: "# ";
    }

    .current {
        color: var(--decoration);
    }

    .lower {
        position: fixed;
        bottom: 2em;
    }

    @media (max-width: 600px) {
        :root {
            --sidebar-width: 30vw;
        }
    }

    @media (max-width: 500px) {
        :root {
            --sidebar-width: 0px;
        }

        .sidebar {
            width: 100%;
        }
    }
</style>

<script>
    const sidebar = document.querySelector(".sidebar");
    window.addEventListener("resize", sizeCheck);

    function sizeCheck() {
        if (window.innerWidth <= 500) {
            sidebar.setAttribute("data-collapsed", "true");
        } else if (sidebar.getAttribute("data-collapsed") == "true") {
            sidebar.setAttribute("data-collapsed", "false");
        }
    }

    sizeCheck();

    document
        .querySelector('a[href="' + location.pathname + '"]')
        .classList.add("current");

    document.querySelector("#settingsToggle").addEventListener("click", (e) => {
        document
            .querySelector(".settings")
            .setAttribute("data-visible", "true");
    });

    document
        .querySelectorAll(".hamburger")
        .forEach((el) => el.addEventListener("click", toggleSidebar));

    function toggleSidebar() {
        if (
            !sidebar.getAttribute("data-collapsed") ||
            sidebar.getAttribute("data-collapsed") == "false"
        ) {
            sidebar.setAttribute("data-collapsed", "true");
            document.querySelector(".main").classList.add("no-margin-left");
            document.querySelector("#h1burger").classList.remove("hidden");
        } else {
            sidebar.setAttribute("data-collapsed", "false");
            document.querySelector(".main").classList.remove("no-margin-left");
            document.querySelector("#h1burger").classList.add("hidden");
        }
    }
</script>
